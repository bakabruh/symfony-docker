{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Derniers users :
    <ul>
        {% for user in users %}
            <li>
                <div>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">{{ user.fullName }} - {{ user.class }}</a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

<div class="example-wrapper">
    Dernières commandes :
    <ul>
        {% for order in orders %}
            <li>
                <div>
                    <a href="{{ path('meal_order', {'id': order.id}) }}"><span style="font-weight: bold">{{ order.meal.title }}</span>  commandé par <span style="font-weight: bold">{{ order.customer.fullName }}</span> </a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

<div class="example-wrapper">
    Derniers plats ajoutés:
    <ul>
        {% for meal in meals %}
            <li>
                <div>
                    <a href="{{ path('meal_show', {'id': meal.id}) }}"><span style="font-weight: bold">{{ meal.title }}</span>  fait par <span style="font-weight: bold">{{ meal.chef.fullName }}</span> </a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
