{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="
    flex flex-col items-center justify-center space-y-4
    bg-white
    px-6 py-8 mx-auto">
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl md:text-3xl text-center font-bold">
                Se connecter
            </h1>
            <form class="flex flex-col space-y-4 md:space-y-6" method="post" xmlns="http://www.w3.org/1999/html">
                <div>
                    <label for="inputEmail" class="block mb-2 text-sm font-medium"
                    >Email</label>
                    <input type="email" name="email" id="inputEmail" value="{{ last_username }}" autocomplete="email" autofocus
                    class="bg-zinc-50 border border-zinc-300 sm:text-sm rounded-lg block w-full p-2.5" 
                    placeholder="example@domain.com" required>
                </div>
                <div>
                    <label for="inputPassword" class="block mb-2 text-sm font-medium"
                    >Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" placeholder="••••••••" autocomplete="current-password"
                    class="bg-zinc-50 border border-zinc-300 sm:text-sm rounded-lg block w-full p-2.5" 
                    required>
                </div>
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="remember" aria-describedby="remember" type="checkbox" name="_remember_me" class="w-4 h-4 border border-zinc-300 rounded bg-zinc-50 focus:ring-3">
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="remember" class="text-zinc-500">Rester connecté</label>
                    </div>
                </div>
                <button class="btn btn-blue" type="submit">
                    Valider
                </button>
                <p class="text-sm font-light text-zinc-500">
                    Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="underline-offset-2 font-medium hover:text-zinc-600 hover:underline">
                        Je m'inscris
                    </a>
                </p>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
            </form>
        </div>
    </div>
    {% if error %}
        <div class="position:center p-2 bg-red-800 items-center text-red-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
            <span class="flex rounded-full bg-red-500 uppercase px-2 py-1 text-xs font-bold mr-3">Erreur</span>
            <span class="font-semibold mr-2 text-left flex-auto">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        </div>
    {% endif %}
</div>
{% endblock %}
